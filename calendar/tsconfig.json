/*
    위치: 프로젝트 루트 디렉토리
    TypeScript 프로젝트에서 
    TypeScript 컴파일러의 설정을 정의하는 파일
*/

{
    "compilerOptions": {
      "module": "commonjs",                    // 서버에서 일반적으로 사용하는 모듈 시스템
      "target": "es2020",                      // ECMAScript 버전 (타겟)
      "experimentalDecorators": true,          // 데코레이터 사용 활성화
      "emitDecoratorMetadata": true,           // 데코레이터 메타데이터 활성화
      "strict": true,                          // 엄격한 타입 검사 활성화
      "skipLibCheck": true,                    // 라이브러리 검사 생략
      "forceConsistentCasingInFileNames": true // 파일 이름의 대소문자 일관성 유지
    },
    "include": ["calendar/**/*"],                   // 포함할 파일 및 디렉토리 (필요에 따라 변경)
    "exclude": ["node_modules"]                // 제외할 파일 및 디렉토리
}